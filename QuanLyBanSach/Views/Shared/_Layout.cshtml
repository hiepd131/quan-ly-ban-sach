<body>
    <header>


        <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">

            <div class="container">
                <div class="d-flex">
                    <a class="brand" href="/">
                        <b>Trang chủ</b>
                    </a>
                    <div class="nav-link nav-chude">
                        <div class="nav-chude-label">
                            <b>Chủ đề</b>
                        </div>

                        @Html.Action("ChuDe", "Sach")
                    </div>

                    <div class="nav-link nav-nxb">
                        <div class="nav-nxb-label">
                            <b>Nhà xuất bản</b>
                        </div>
                        @Html.Action("NhaXuatBan", "Sach")
                    </div>


                </div>
                @using (Html.BeginForm("Tim", "Sach", "POST"))

                {
                    <div class="d-flex">

                        <label class="control-label" style="color:red">Tìm kiếm sách</label>
                        <input class="form-control m-2" name="query" id="query" value="@ViewData["Query"]" />
                        <button type="submit" class="btn-search m-lg-2">Search</button>
                    </div>
                }
            </div>

            @Html.Action("NguoiDung", "NguoiDung")
        </nav>



        <div class="container">
            <h2>Top Books</h2>
            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                    <div class="item active">
                        <img src="https://newshop.vn/public/uploads/news/sach-tieu-thuyet-10-sach-tieu-thuyet-hay-nhat-hien-nay.jpg" alt="Los Angeles" style="width: 30%; margin: auto">
                    </div>

                    <div class="item">
                        <img src="https://newshop.vn/public/uploads/news/sach-tieu-thuyet-10-sach-tieu-thuyet-hay-nhat-hien-nay.jpg" alt="Los Angeles" style="width: 30%; margin: auto">
                    </div>

                    <div class="item">
                        <img src="https://newshop.vn/public/uploads/news/sach-tieu-thuyet-10-sach-tieu-thuyet-hay-nhat-hien-nay.jpg" alt="Los Angeles" style="width: 30%; margin: auto">
                    </div>
                </div>

                <!-- Left and right controls -->
                <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>   <!-- Wrapper for slides -->
    </header>


    @Html.Action("GioHangPartial", "GioHang")
    <div class="container" style="margin:auto">
        @RenderBody()
    </div>



